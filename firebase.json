{
  "hosting": {
    "public": "dist",
    "ignore": [],
    "rewrites": [
      {
        "source": "/api/yt",
        "function": { "functionId": "getYtMusic" }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": ["pnpm --prefix \"$RESOURCE_DIR\" run build"],
      "runtime": "nodejs18"
    }
  ]
}
